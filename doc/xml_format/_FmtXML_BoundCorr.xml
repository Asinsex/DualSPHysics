<!-- *** DualSPHysics (18-09-2018) *** -->
<!-- *** class: JSphBoundCorr *** -->
<!------------------------------------------------------------------------------->
<!------------------------------------------------------------------------------->
<!-- *** boundary extrapolated correction configuration (used in combination with InOut). *** -->
<special>
	<boundcorr>
		<determlimit value="1e+3" comment="Use 1e-3 for first_order or 1e+3 for zeroth_order (default=1e+3)" />
		<extrapolatedouble value="false" comment="Use double calculations for rhop and velocity extrapolation from ghost nodes (default=false)" />
		<mkzone mkbound="1">
			<limitpoint x="-1.1" y="0" z="0.1" />
			<direction x="1" y="0" z="0" comment="Direction to fluid" />
		</mkzone>
		<mkzone mkbound="10">
			<limitpoint x="0" y="0" z="0.1" />
			<direction x="0" y="0" z="1" comment="Direction to fluid" />
		</mkzone>
		<mkzone mkbound="11">
			<autoconfig direction="top" comment="Direction (top/bottom/left/right/front/back) to fluid using automatic configuration (only for parallel boxes)" />
		</mkzone>
	</boundcorr>
</special>
